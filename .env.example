# KCEA Real-time Attendance Portal - Environment Variables
# Developed by Harshavardhan Ramgiri - AUTOFLOW AGENCY
# Copy this file to .env and fill in your actual values

# ================================
# DATABASE CONFIGURATION
# ================================
# MongoDB Atlas connection string (free tier)
# Get from: https://cloud.mongodb.com/
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/kcea-attendance

# ================================
# JWT AUTHENTICATION
# ================================
# Generate a strong secret key for JWT tokens
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret

# ================================
# EMAIL CONFIGURATION (Gmail SMTP)
# ================================
# Your Gmail address
GMAIL_USER=your-email@gmail.com
# Gmail App Password (16 characters, no spaces)
# Get from: https://support.google.com/accounts/answer/185833
GMAIL_PASS=your-gmail-app-password

# ================================
# SERVER CONFIGURATION
# ================================
PORT=5000
NODE_ENV=development
# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# ================================
# CORS CONFIGURATION
# ================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.vercel.app

# ================================
# COLLEGE INFORMATION
# ================================
COLLEGE_NAME=Kshatriya College of Engineering
COLLEGE_CODE=KCEA
COLLEGE_ESTABLISHED=2001
COLLEGE_LOCATION=NH-16, 30km from Nizamabad, Telangana
COLLEGE_AFFILIATION=JNTUH

# ================================
# SECURITY SETTINGS
# ================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
OTP_RATE_LIMIT=5

# OTP Configuration
OTP_EXPIRES_IN=60
OTP_RESEND_COOLDOWN=30
MAX_OTP_ATTEMPTS=3

# ================================
# OPTIONAL SERVICES
# ================================
# Cloudinary for image uploads (optional)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Firebase for push notifications (optional)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# Redis for session storage (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# ================================
# FRONTEND ENVIRONMENT VARIABLES
# ================================
# These go in your frontend .env file

# Backend API URL
REACT_APP_API_URL=http://localhost:5000
# Socket.IO URL (usually same as API URL)
REACT_APP_SOCKET_URL=http://localhost:5000

# Firebase configuration for push notifications (optional)
REACT_APP_FIREBASE_CONFIG={"apiKey":"...","authDomain":"..."}

# ================================
# PRODUCTION VALUES EXAMPLES
# ================================
# For production deployment, use these formats:

# MongoDB Atlas (Production)
# MONGO_URI=mongodb+srv://kcea-admin:StrongPassword123@kcea-cluster.xxxxx.mongodb.net/kcea-attendance

# Railway Backend URL (Production)
# REACT_APP_API_URL=https://kcea-backend.railway.app
# REACT_APP_SOCKET_URL=https://kcea-backend.railway.app

# Vercel Frontend URL (Production)
# FRONTEND_URL=https://kcea-portal.vercel.app
# CORS_ORIGINS=https://kcea-portal.vercel.app

