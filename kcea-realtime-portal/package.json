    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HARSHAVARDHANRAMGIRI/kcea-realtime-attendance-portal"
  },
  "homepage": "https://kcea-portal.vercel.app",
